{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/doctor/page.jsx",
    "src/app/doctor/_components/availability-settings.jsx",
    "src/actions/doctor.js",
    "src/actions/appointment.js",
    "src/app/(main)/doctors/[specialty]/[id]/_components/doctor-profile.jsx",
    "src/app/(main)/doctors/[specialty]/[id]/_components/slot-picker.jsx",
    "src/app/(main)/doctors/[specialty]/[id]/_components/appointment-form.jsx",
    "src/components/appointment-card.jsx",
    "src/app/(main)/video-call/page.jsx",
    "src/app/(main)/video-call/video-callui.jsx",
    "src/actions/credits.js",
    "src/actions/doctors-listing.js",
    "src/actions/onboarding.js",
    "src/app/(main)/onboarding/page.jsx",
    "src/app/(main)/pricing/page.jsx",
    "src/app/hooks/user-fetch.js",
    "src/app/(main)/doctors/[specialty]/[id]/layout.jsx",
    "src/app/(main)/appointments/page.jsx",
    "src/app/doctor/_components/appointment-list.jsx",
    "src/app/(main)/admin/_components/pending-doctors.jsx",
    "src/app/(main)/admin/_components/verified-doctors.jsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
